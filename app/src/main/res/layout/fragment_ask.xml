<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_scroll_bg"
    tools:context="com.technology.yuyi.fragment.AskFragment">

    <RelativeLayout
        android:id="@+id/infor_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/str_ask"
            android:textColor="@color/color_normal"
            android:textSize="17sp" />

    </RelativeLayout>

    <View
        android:id="@+id/mea_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/infor_title"
        android:background="@color/color_bg" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/ask_swipe_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mea_line"
        android:layout_marginTop="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.technology.yuyi.myview.InformationListView
                    android:id="@+id/hospital_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                </com.technology.yuyi.myview.InformationListView>

                <RelativeLayout
                    android:id="@+id/many_relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hospital_listview"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/footer_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="15dp"
                        android:paddingEnd="20dp"
                        android:paddingStart="20dp"
                        android:paddingTop="15dp"
                        android:text="加载更多"
                        android:textColor="@color/color_normal"
                        android:textSize="13sp" />

                    <ProgressBar
                        android:id="@+id/pbLocate"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/footer_tv"
                        android:paddingTop="15dp"
                        android:visibility="invisible" />

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>


    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>
