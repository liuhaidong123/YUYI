<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/img_mess"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:src="@mipmap/main_background4" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_mess"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/img_mess"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/str_listview_tv_title"
            android:textColor="@color/color_normal"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_mess"
            android:textColor="@color/color_mess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_mess"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/img_mess"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="13sp"
            android:text="@string/str_listview_tv_mess" />
    </RelativeLayout>
</RelativeLayout>