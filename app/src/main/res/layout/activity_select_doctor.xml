                <TextView
                    android:id="@+id/date7_morning"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/date7"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:text="@string/doctor_date_morning"
                    android:textColor="@color/color_drumall" />

                <TextView
                    android:id="@+id/date7_afternoon"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/date7"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@id/date7_morning"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:text="@string/doctor_date_afternoon"
                    android:textColor="@color/color_drumall" />
            </RelativeLayout>
        </LinearLayout>

    </HorizontalScrollView>

    <ListView
        android:dividerHeight="10dp"
        android:divider="@color/color_scroll_bg"
        android:id="@+id/doctor_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/h_scroll"
        android:layout_marginTop="20dp"
        android:background="@color/color_white">


    </ListView>

</RelativeLayout>
