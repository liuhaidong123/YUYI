<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_doctor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_scroll_bg"
    tools:context="com.technology.yuyi.activity.SelectDoctorActivity">

    <RelativeLayout

        android:id="@+id/doctor_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/doctor_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/name_ke"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/str_doctor"
            android:textColor="@color/color_normal"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:id="@+id/doc_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/doctor_title"
        android:background="@color/color_bg" />

    <HorizontalScrollView
        android:id="@+id/h_scroll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/doc_line"
        android:background="@color/color_scroll_bg"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/one_rl"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1dp">

                <TextView
                    android:id="@+id/date1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color_username" />

                <TextView
                    android:id="@+id/date1_morning"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/date1"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_username"
                    android:gravity="center"
                    android:text="@string/doctor_date_morning"
                    android:textColor="@color/color_white" />

                <TextView
                    android:id="@+id/date1_afternoon"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/date1"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@id/date1_morning"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:text="@string/doctor_date_afternoon"
                    android:textColor="@color/color_drumall" />
            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/two_rl"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1dp">

                <TextView
                    android:id="@+id/date2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:id="@+id/date2_morning"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/date2"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:text="@string/doctor_date_morning"
                    android:textColor="@color/color_drumall" />

                <TextView
                    android:id="@+id/date2_afternoon"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/date2"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@id/date2_morning"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:text="@string/doctor_date_afternoon"
                    android:textColor="@color/color_drumall" />
            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/three_rl"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1dp">

                <TextView
                    android:id="@+id/date3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
