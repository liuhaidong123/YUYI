<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ms_drug_state"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context="com.technology.yuyi.activity.MS_drugState">

    <include
        layout="@layout/activity_titleinclude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

    <RelativeLayout
        android:id="@+id/ms_home_ms_state"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#f9f9f9">

        <ImageView
            android:id="@+id/ms_drgustate_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/drug" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ms_drgustate_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ms_drugstate_my_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/ms_drugstate_my_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text=""
                android:textColor="#333333"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/ms_drugstate_my_nowState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="#333333"
            android:textSize="13sp" />
    </RelativeLayout>

    <com.technology.yuyi.lzh_view.MyTextView
        android:id="@+id/ms_drugstate_myTextView"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <ListView
        android:id="@+id/ms_drugstate_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@color/color_white"
        android:divider="#ffffff"
        android:dividerHeight="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"></ListView>
</LinearLayout>
