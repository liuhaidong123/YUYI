<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ms_drug_state"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:context="com.technology.yuyi.activity.MS_drugState">
<include layout="@layout/activity_titleinclude"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"/>
    <RelativeLayout
        android:id="@+id/ms_home_ms_state"
        android:background="#f9f9f9"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/ms_drgustate_image"
            android:src="@mipmap/drug"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@+id/ms_drgustate_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <TextView
                android:textColor="#333333"
                android:textSize="13sp"
                android:text="我的药品状态"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#333333"
                android:textSize="13sp"
                android:text="2017-3-24"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_centerVertical="true"
            android:textColor="#333333"
            android:textSize="13sp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前状态：煎药中"/>
    </RelativeLayout>
    <com.technology.yuyi.lzh_view.MyTextView
        android:id="@+id/ms_drugstate_myTextView"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <ListView
        android:background="@color/color_white"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/ms_drugstate_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#ffffff"
        android:dividerHeight="0dp"></ListView>
</LinearLayout>
