<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/drug_left"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="3dp"
            android:background="@color/themeColor"/>
        <ImageView
            android:id="@+id/drug_stupimage"
            android:src="@mipmap/a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/drug_right"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="3dp"
            android:background="@color/themeColor"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/themeColor"
        android:textSize="15sp"
        android:id="@+id/drug_state"
        android:text="正在煎药"/>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_above="@+id/bottomText"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/picture1"
            android:id="@+id/drug_infoImage"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:background="@color/color_white"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:id="@+id/bottomText"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="#474d5b"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="17sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:lineSpacingExtra="5dp"
            android:text=""
            android:layout_height="70dp"/>
    </RelativeLayout>

</LinearLayout>