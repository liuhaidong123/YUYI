<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_equipment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.technology.yuyi.activity.AddEquipmentActivity">
    <RelativeLayout
        android:id="@+id/equip_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white">
        <ImageView
            android:id="@+id/equip_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:src="@mipmap/back" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/str_equip"
            android:textColor="@color/color_normal"
            android:textSize="17sp" />
    </RelativeLayout>
    <View
        android:id="@+id/equip_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/equip_title"
        android:background="@color/color_bg" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/equip_line"
        android:background="@color/color_ee"
        android:gravity="center">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_zx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_zx"
                android:textColor="@color/color_ad"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_zx"
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_zx"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/zx_btn_bg"
                android:text="@string/str_btn_zx"
                android:textColor="@color/color_fe" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
