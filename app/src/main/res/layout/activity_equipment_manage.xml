<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_equipment_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_scroll_bg"
    tools:context="com.technology.yuyi.activity.EquipmentManageActivity">

    <RelativeLayout
        android:id="@+id/elec_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/equit_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/equitment_m"
            android:textColor="@color/color_normal"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:id="@+id/elec_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/elec_title"
        android:background="@color/color_bg" />


    <ListView
        android:id="@+id/equitment_listview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/elec_line"
        android:layout_marginTop="10dp"
        android:background="@color/color_scroll_bg"

       >

    </ListView>

    <RelativeLayout
        android:id="@+id/add_relative"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/equitment_listview_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/blood_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="28dp"
            android:src="@mipmap/add1_icon_1" />

        <TextView
            android:id="@+id/tv_blood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/blood_img"
            android:text="@string/str_add"
            android:textColor="@color/color_ad"
            android:textSize="13sp" />


        <View
            android:id="@+id/blood_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_dd" />
    </RelativeLayout>
</RelativeLayout>
