<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_scroll_bg"
    tools:context="com.technology.yuyi.activity.MainActivity">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/equip_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/title_all"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_normal"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_edit_hint"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/all_ll_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/navigate_bg"
        android:orientation="vertical">

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:background="@color/color_cancel" />-->

        <LinearLayout
            android:id="@+id/firstpage_btn_ll_all"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/firstpage_btn_ll"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/firstpage_btn_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/first_page_press" />

                <TextView
                    android:id="@+id/firstpage_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/firstpage_name"
                    android:textColor="@color/navigate_tv_select" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/measure_btn_ll"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/measure_btn_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/measure_no_press" />

                <TextView
                    android:id="@+id/measure_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/measure_name"
                    android:textColor="@color/navigate_tv_select_no" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ask_btn_ll"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ask_btn_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ask_no_press" />

                <TextView
                    android:id="@+id/ask_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/ask_name"
                    android:textColor="@color/navigate_tv_select_no" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_btn_ll"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/my_btn_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_no_press" />

                <TextView
                    android:id="@+id/my_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/my_name"
                    android:textColor="@color/navigate_tv_select_no" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/fragment_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/all_ll_btn">

    </RelativeLayout>
</RelativeLayout>
