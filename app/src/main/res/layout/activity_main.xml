<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.technology.yuyi.activity.MainActivity">

    <LinearLayout
        android:id="@+id/all_ll_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_fragment_btn"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/firstpage_btn_ll"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/firstpage_btn_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/first_page_press" />

            <TextView
                android:id="@+id/firstpage_tv"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/firstpage_name"
                android:textColor="@color/color_press_tv" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/measure_btn_ll"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/measure_btn_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/measure_no_press" />

            <TextView
                android:id="@+id/measure_tv"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/measure_name"
                android:textColor="@color/color_no_press_tv" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ask_btn_ll"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ask_btn_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ask_no_press" />

            <TextView
                android:id="@+id/ask_tv"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/ask_name"
                android:textColor="@color/color_no_press_tv" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_btn_ll"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_btn_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/my_no_press" />

            <TextView
                android:id="@+id/my_tv"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/my_name"
                android:textColor="@color/color_no_press_tv" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fragment_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/all_ll_btn"></RelativeLayout>
</RelativeLayout>
