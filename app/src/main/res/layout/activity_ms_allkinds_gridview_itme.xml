<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="172dp"
    android:background="@color/color_white"
    android:layout_height="225dp">
    <ImageView
        android:id="@+id/ms_allkinds_gridview_item_image"
        android:layout_width="150dp"
        android:src="@mipmap/item03"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_height="150dp" />
    <TextView
        android:id="@+id/ms_allkinds_gridview_item_name"
        android:layout_width="wrap_content"
        android:textColor="#6a6a6a"
        android:text="999感冒灵"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/ms_allkinds_gridview_item_image"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ms_home_gridviewitemTextsize15"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ms_allkinds_gridview_item_name"
        android:layout_marginLeft="10dp">
        <!--<ImageView-->
        <!--android:src="@mipmap/"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
        <TextView
            android:textSize="@dimen/ms_home_gridviewitemTextsize15"
            android:id="@+id/ms_home_gridview_dailyMitem_price"
            android:layout_width="wrap_content"
            android:textColor="#e00610"
            android:text="¥39"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>