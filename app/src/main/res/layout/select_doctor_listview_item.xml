<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <com.technology.yuyi.myview.RoundImageView
            android:id="@+id/doctor_img_head"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@mipmap/main_background4" />

        <RelativeLayout
            android:id="@+id/right_rl"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/blue_circle_bg"
            android:gravity="center">

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/regi_numm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/regi"
                    android:textColor="@color/color_gua"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/doc_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/regi_numm"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/doctor_num"
                    android:textColor="@color/color_gua"
                    android:textSize="10sp" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/doctor_img_head"
            android:layout_toStartOf="@id/right_rl">

            <TextView
                android:id="@+id/doctor_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/doctor_name"
                android:textColor="@color/color_drumall"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/doctor_job_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/doctor_name_tv"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/doctor_job"
                android:textColor="@color/color_drumall"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/good_at_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_name_tv"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/doctor_good_at"
                android:textColor="@color/color_drumall"
                android:textSize="13sp" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>