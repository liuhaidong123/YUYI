<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_scroll_bg"
    tools:context="com.technology.yuyi.activity.SetActivity">

    <RelativeLayout
        android:id="@+id/set_mess_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/set_mess_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/str_set"
            android:textColor="@color/color_normal"
            android:textSize="17sp" />
    </RelativeLayout>

    <!--<View-->
    <!--android:id="@+id/set_mess_line"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:layout_below="@id/set_mess_title"-->
    <!--android:background="@color/fgColor" />-->
    <RelativeLayout
        android:id="@+id/la"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_mess_title"
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:paddingLeft="10dp">

        <RelativeLayout
            android:id="@+id/toplayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fgColor">

            <RelativeLayout
                android:id="@+id/tv_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:clickable="true"
                android:onClick="settingUp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:text="@string/contact_ours"
                    android:textColor="@color/color_normal"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/rightarrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tv_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_contact"
                android:layout_marginTop="1dp"
                android:background="@color/color_white"
                android:clickable="true"
                android:onClick="settingUp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:text="@string/suggestion"
                    android:textColor="@color/color_normal"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/re3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/rightarrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tv_about_ours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_suggestion"
                android:layout_marginTop="1dp"
                android:background="@color/color_white"
                android:clickable="true"
                android:onClick="settingUp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/re4"
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:text="@string/about_ours"
                    android:textColor="@color/color_normal"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/re4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/rightarrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tv_changePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_about_ours"
                android:layout_marginTop="1dp"
                android:background="@color/color_white"
                android:clickable="true"
                android:onClick="settingUp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:text="绑定手机号"
                    android:textColor="@color/color_normal"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/rightarrow" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <!--//退出-->
    <RelativeLayout
        android:id="@+id/tv_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/la"
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="settingUp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/re5"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:text="@string/exit"
            android:textColor="@color/color_normal"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/re5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@mipmap/rightarrow" />
    </RelativeLayout>

</RelativeLayout>
