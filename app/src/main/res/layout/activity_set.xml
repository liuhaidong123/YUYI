<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_scroll_bg"
    tools:context="com.technology.yuyi.activity.SetActivity">

    <RelativeLayout
        android:id="@+id/set_mess_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/set_mess_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/str_set"
            android:textColor="@color/color_normal"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:id="@+id/set_mess_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/set_mess_title"
        android:background="@color/color_bg" />

    <TextView
        android:clickable="true"
        android:onClick="settingUp"
        android:id="@+id/tv_contact"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/set_mess_line"
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="@string/contact_ours"
        android:textColor="@color/color_press"
        android:textSize="12sp" />

    <TextView
        android:clickable="true"
        android:onClick="settingUp"
        android:id="@+id/tv_suggestion"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_contact"
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="@string/suggestion"
        android:textColor="@color/color_press"
        android:textSize="12sp" />

    <TextView
        android:clickable="true"
        android:onClick="settingUp"
        android:id="@+id/tv_about_ours"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_suggestion"
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="@string/about_ours"
        android:textColor="@color/color_press"
        android:textSize="12sp" />

    <TextView
        android:clickable="true"
        android:onClick="settingUp"
        android:id="@+id/tv_exit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_about_ours"
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="@string/exit"
        android:textColor="@color/color_press"
        android:textSize="12sp" />
</RelativeLayout>
