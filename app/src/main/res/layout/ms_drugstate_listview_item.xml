<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/leftlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ms_drugstte_listv_item_Image"
            android:src="@mipmap/now"/>
        <TextView
            android:layout_below="@+id/ms_drugstte_listv_item_Image"
            android:layout_centerHorizontal="true"
            android:id="@+id/ms_drugstte_listv_item_text"
            android:layout_width="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="70dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/leftlayout">
        <TextView
            android:id="@+id/ms_drugstte_listv_item_Texttime"
            android:textColor="#333333"
            android:textSize="12sp"
            android:text="9:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ms_drugstte_listv_item_TextMsg"
            android:textColor="#333333"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:text="药品清单已接收"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>