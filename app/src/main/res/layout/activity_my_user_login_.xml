<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_user_login_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    tools:context="com.technology.yuyi.activity.My_userLogin_Activity">
   <TextView
       android:id="@+id/login_title"
       android:layout_width="match_parent"
       android:layout_height="44dp"
       android:text="登录"
       android:gravity="center"
       android:textSize="@dimen/ms_home_Titletextsize17"
       android:textColor="#333333"/>
<RelativeLayout
    android:layout_below="@+id/login_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginpicture">
    <com.technology.yuyi.lzh_utils.XCRoundRectImageView
        android:id="@+id/my_userlogin_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/logo" />
        <LinearLayout
            android:background="@drawable/loginrela"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/my_userlogin_imageview"
            android:id="@+id/login_rela"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">
            <!--手机号-->
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:text="手机号"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/my_userlogin_imageUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        />

                    <EditText
                        android:id="@+id/my_userlogin_edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/my_userlogin_imageUserName"
                        android:background="@null"
                        android:inputType="number"
                        android:gravity="center_vertical"
                        android:maxLength="11"
                        android:hint="输入11位手机号"
                        android:text=""
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/fgColor"></View>
            <!--动态验证码-->
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:text="动态码"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/my_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    />

                <EditText
                    android:id="@+id/my_status_num_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/my_status"
                    android:background="@null"
                    android:inputType="number"
                    android:gravity="center_vertical"
                    android:maxLength="4"
                    android:hint="输入动态验证码"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/my_status_num_img"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/fgColor"></View>
            <!--验证码-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:text="验证码"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/my_userlogin_imageUserPsd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        />
                    <RelativeLayout
                        android:layout_marginLeft="20dp"
                        android:id="@+id/my_userlogin_rela_SMScode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/my_userlogin_imageUserPsd">
                        <EditText
                            android:layout_toLeftOf="@+id/layout"
                            android:hint="输入手机验证码"
                            android:id="@+id/my_userlogin_edit_smdCode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:background="@null"
                            android:inputType="numberDecimal"
                            android:maxLength="6"
                            android:text=""
                            android:textColor="#333333"
                            android:textSize="14sp" />
                        <RelativeLayout
                            android:layout_centerVertical="true"
                            android:id="@+id/layout"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true">
                            <!--<TextView-->
                                <!--android:layout_centerVertical="true"-->
                                <!--android:id="@+id/my_userlogin_SMStimer"-->
                                <!--android:layout_width="25dp"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_alignParentBottom="true"-->
                                <!--android:layout_alignParentRight="true"-->
                                <!--android:layout_marginLeft="5dp"-->
                                <!--android:paddingBottom="3dp"-->
                                <!--android:text="59S"-->
                                <!--android:textColor="#f21121"-->
                                <!--android:textSize="10sp" />-->
                            <TextView
                                android:layout_marginRight="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:id="@+id/my_userlogin_getSMScode"
                                android:layout_width="90dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/btnlogin"
                                android:gravity="center"
                                android:text="发送验证码"
                                android:textColor="#ffffff"
                                android:textSize="13sp" />
                        </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/rela_secrect"
        android:layout_below="@+id/login_rela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">
        <ImageView
            android:id="@+id/login_imageSelect"
            android:src="@mipmap/selectedn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_toRightOf="@+id/login_imageSelect"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#333333"
            android:text="我已确认阅读并同意《使用条款和隐私协议》"/>
    </RelativeLayout>
        <TextView
            android:id="@+id/my_userlogin_logninButton"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/rela_secrect"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/btnlogin"
            android:clickable="true"
            android:gravity="center"
            android:onClick="Login"
            android:text="登录"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#ffffff"
            android:textSize="16sp" />
</RelativeLayout>
</RelativeLayout>
