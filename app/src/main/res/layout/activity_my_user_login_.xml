<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_user_login_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#eeeeee"
    tools:context="com.technology.yuyi.activity.My_userLogin_Activity">

    <com.technology.yuyi.lzh_utils.XCRoundRectImageView
        android:id="@+id/my_userlogin_imageview"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@mipmap/logo"
        android:scaleType="centerCrop"
        android:layout_marginTop="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_userlogin_imageview"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:id="@+id/my_userlogin_rela_name"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            >
            <TextView
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_marginTop="60dp"
                android:id="@+id/my_userlogin_fg1"
                android:layout_centerHorizontal="true"
                android:background="#cccccc"/>
            <RelativeLayout
                android:layout_marginBottom="7.5dp"
                android:layout_above="@+id/my_userlogin_fg1"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
               >
                <ImageView
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/login_phone_icon_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_userlogin_imageUserName"/>
                <EditText
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:background="@null"
                    android:inputType="number"
                    android:gravity="bottom"
                    android:maxLength="11"
                    android:id="@+id/my_userlogin_edit_name"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="15dp"
                    android:paddingBottom="0dp"
                    android:layout_toRightOf="@+id/my_userlogin_imageUserName"
                    android:text="17743516301"/>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_userlogin_rela_psd"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_below="@+id/my_userlogin_rela_name">

            <RelativeLayout

                android:layout_marginBottom="7.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_above="@+id/my_userlogin_fg2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_lock_icon_"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/my_userlogin_imageUserPsd"/>
                <RelativeLayout
                    android:layout_toRightOf="@+id/my_userlogin_imageUserPsd"
                    android:id="@+id/my_userlogin_rela_SMScode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true">
                    <EditText
                        android:inputType="numberDecimal"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:text="123456"
                        android:maxLength="6"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_alignParentLeft="true"
                        android:paddingBottom="0dp"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/my_userlogin_edit_smdCode" />
                        <RelativeLayout
                            android:id="@+id/layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            >
                            <TextView
                                android:id="@+id/my_userlogin_SMStimer"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:textColor="#f21121"
                                android:textSize="12sp"
                                android:text="59S"
                                android:layout_marginLeft="5dp"
                                android:layout_alignParentBottom="true"
                                android:paddingBottom="3dp"
                                android:layout_alignParentRight="true"
                                />
                            <TextView
                                android:background="@drawable/my_userlogin_smscode"
                                android:layout_width="50dp"
                                android:text="获取验证码"
                                android:textSize="9sp"
                                android:gravity="center"
                                android:id="@+id/my_userlogin_getSMScode"
                                android:textColor="#f9f9f9"
                                android:layout_height="20dp"
                                android:layout_alignParentBottom="true"
                                android:layout_toLeftOf="@+id/my_userlogin_SMStimer" />

                        </RelativeLayout>

                </RelativeLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/my_userlogin_fg2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <TextView
            android:clickable="true"
            android:onClick="Login"
            android:id="@+id/my_userlogin_logninButton"
            android:background="@drawable/my_userlogin_loginbutton"
            android:layout_below="@+id/my_userlogin_rela_psd"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="35dp"
            android:text="登录"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>
</RelativeLayout>
