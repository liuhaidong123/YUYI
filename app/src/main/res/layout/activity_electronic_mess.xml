<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_electronic_mess"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context="com.technology.yuyi.activity.ElectronicMessActivity">

    <RelativeLayout
        android:id="@+id/elec_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/elec_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/str_elec_title"
            android:textColor="@color/color_normal"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:id="@+id/elec_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_cancel" />

    <com.technology.yuyi.lzh_utils.MyEmptyListView
        android:id="@+id/elec_listview"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </com.technology.yuyi.lzh_utils.MyEmptyListView>
</LinearLayout>
