<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_look_electronic_mess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_scroll_bg"
    tools:context="com.technology.yuyi.activity.LookElectronicMessActivity">

    <RelativeLayout
        android:id="@+id/elec_mess_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/elec_mess_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/str_elec_title"
            android:textColor="@color/color_normal"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:id="@+id/elec_mess_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/elec_mess_title"
        android:background="@color/color_bg" />


    <RelativeLayout

        android:id="@+id/user_name_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/elec_mess_line"
        android:layout_marginTop="10dp"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="@string/user_name"
            android:textColor="@color/color_normal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="@string/str_li"
            android:textColor="@color/color_press"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_sex_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/user_name_rl"
        android:layout_marginTop="1dp"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="@string/str_user_sex"
            android:textColor="@color/color_normal"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="@string/str_user_boy"
            android:textColor="@color/color_press"
            android:textSize="14sp" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/user_age_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/user_sex_rl"
        android:layout_marginTop="1dp"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="@string/str_user_age"
            android:textColor="@color/color_normal"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="26"
            android:textColor="@color/color_press"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/user_place_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/user_age_rl"
        android:layout_marginTop="10dp"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="@string/str_user_place"
            android:textColor="@color/color_normal"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="@string/str_user_place_mess"
            android:textColor="@color/color_press"
            android:textSize="14sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/user_profession_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/user_place_rl"
        android:layout_marginTop="1dp"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="@string/user_profession"
            android:textColor="@color/color_normal"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="@string/user_designer"
            android:textColor="@color/color_press"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_marriage_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/user_profession_rl"
        android:layout_marginTop="1dp"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="@string/user_merry"
            android:textColor="@color/color_normal"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="@string/user_merry_y"
            android:textColor="@color/color_press"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_date_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/user_marriage_rl"
        android:layout_marginTop="10dp"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="@string/user_date"
            android:textColor="@color/color_normal"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="@string/str_tv_date"
            android:textColor="@color/color_press"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_now_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/user_date_rl"
        android:layout_margin="10dp"
        android:background="@color/color_white">
        <TextView
            android:id="@+id/tv_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/user_now"
            android:textColor="@color/color_normal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_now_disease"
            android:singleLine="false"
            android:scrollbars="vertical"
            android:layout_below="@id/tv_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/str_hospiytal_mess"
            android:textColor="@color/color_press"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>
