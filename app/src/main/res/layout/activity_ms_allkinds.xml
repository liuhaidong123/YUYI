<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:scrollbars="none"
        android:id="@+id/ms_allkinds_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:clickable="true"
                    android:onClick="goBack"
                    android:id="@+id/ms_allkinds_return"
                    android:src="@mipmap/ms_home_return"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:layout_centerInParent="true"
                    android:textSize="17sp"
                    android:text="全部药品"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/search"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/textViewf1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cccccc"/>
                <RelativeLayout
                    android:id="@+id/ms_allkinds_rela"
                    android:layout_below="@+id/textViewf1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:background="@drawable/ms_allkinds_rela"
                        android:layout_width="85dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_height="25dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="常用药品"
                                android:textSize="12sp"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/ms_allkinds_textV_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#25f368"/>
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/close"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全部分类"
                            android:clickable="true"
                            android:onClick="getAllKinds"
                            android:id="@+id/ms_allkinds_relative_allkinds"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/ms_allkinds_image_sort"
                            android:textColor="#333333"
                            android:textSize="15sp"/>
                        <ImageView
                            android:id="@+id/ms_allkinds_image_sort"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/open"/>


                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <com.technology.yuyi.lzh_utils.MyGridView
                android:paddingTop="10dp"
                android:id="@+id/ms_allkinds_myGridview"
                android:layout_width="match_parent"
                android:background="#cccccc"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:numColumns="2"
                android:layout_height="match_parent">

            </com.technology.yuyi.lzh_utils.MyGridView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>