<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hand_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_scroll_bg"
    tools:context="com.technology.yuyi.activity.HandInputActivity">

    <RelativeLayout
        android:id="@+id/hand_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/hand_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/str_hand"
            android:textColor="@color/color_normal"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:id="@+id/hand_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/hand_title"
        android:background="@color/color_bg" />

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_below="@id/hand_line"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/tv_g"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/str_userheightpress"
            android:textColor="@color/color_g"
            android:textSize="14sp"
           android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            />
        <View
            android:id="@+id/hand_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_g"
            android:background="@color/color_bg" />
    </RelativeLayout>
</RelativeLayout>
