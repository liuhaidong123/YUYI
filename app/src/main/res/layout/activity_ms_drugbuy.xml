<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/ms_home_return"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="17sp"
        android:text="确认付款"
        android:textColor="#cccccc"/>
</RelativeLayout>

    <ScrollView
        android:layout_above="@+id/ms_drugbuy_submit"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e4e4e4"/>
            <RelativeLayout
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ms_drugbuy_addressmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货信息"
                android:textColor="#999999"
                android:textSize="12sp"/>
                <ImageView
                    android:id="@+id/ms_drugbuy_addressEdit"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/edit"/>
                <TextView
                    android:id="@+id/ms_drugbuy_addressName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#333333"
                    android:text="收货人：刘文"
                    android:layout_below="@+id/ms_drugbuy_addressmsg"/>
                <TextView
                    android:id="@+id/ms_drugbuy_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/ms_drugbuy_addressEdit"
                    android:layout_marginRight="10dp"
                    android:textColor="#333333"
                    android:text="详细地址：北京市大兴区清远里枣园小区1号楼"
                    android:layout_below="@+id/ms_drugbuy_addressName"/>
                <TextView
                    android:id="@+id/ms_drugbuy_phonenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/ms_drugbuy_addressEdit"
                    android:layout_marginRight="10dp"
                    android:textColor="#333333"
                    android:text="联系电话：17743516301"
                    android:layout_below="@+id/ms_drugbuy_address"/>
            </RelativeLayout>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"/>
            <RelativeLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="115dp">
                <RelativeLayout
                    android:id="@+id/ms_drugbuy_rela"
                    android:layout_width="75dp"
                    android:layout_centerVertical="true"
                    android:layout_height="75dp"
                    android:background="@drawable/ms_drugbuy_lin">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@mipmap/testdrug"
                        android:scaleType="fitXY"
                        android:id="@+id/ms_drugbuy_image"
                        android:layout_width="74dp"
                        android:layout_height="74dp" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/ms_drugbuy_price"
                    android:layout_width="wrap_content"
                    android:textColor="#e00610"
                    android:text="￥45"
                    android:layout_toRightOf="@+id/ms_drugbuy_rela"
                    android:layout_alignBottom="@+id/ms_drugbuy_rela"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/ms_drugbuy_name"
                    android:layout_width="wrap_content"
                    android:textColor="#6a6a6a"
                    android:text="氨基酸口服液"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/ms_drugbuy_rela"
                    android:layout_above="@+id/ms_drugbuy_price"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总计"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:textColor="#6a6a6a"/>
                <TextView
                    android:id="@+id/ms_drugbuy_num"
                    android:text="共 1 件"
                    android:textSize="12sp"
                    android:textColor="#6a6a6a"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥45"
                    android:textSize="15sp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#E00610"/>
            </RelativeLayout>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/ms_drugbuy_submit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="确认订单"
        android:background="@drawable/ms_druginfo_shoppingbuy"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="#6a6a6a"/>
</RelativeLayout>