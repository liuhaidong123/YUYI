<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="支付方式"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:textColor="#999999"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"/>
        <TextView
            android:clickable="true"
            android:onClick="selectPayment"
            android:id="@+id/ms_drugbuy_paymentAlipay"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="支付宝支付"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="@drawable/ms_drugbuy_pop_textcolor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"/>

        <TextView
            android:clickable="true"
            android:onClick="selectPayment"
            android:id="@+id/ms_drugbuy_paymentWX"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="微信支付"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="@drawable/ms_drugbuy_pop_textcolor"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"/>
        <TextView
            android:clickable="true"
            android:onClick="selectPayment"
            android:id="@+id/ms_drugbuy_paymentCashOnDelivery"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="货到付款"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="@drawable/ms_drugbuy_pop_textcolor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"/>
        <TextView
            android:background="@drawable/ms_druginfo_shoppingbuy"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="确认"
            android:clickable="true"
            android:onClick="selectPayment"
            android:id="@+id/ms_drugbuy_paymentSubmit"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="#6a6a6a"/>
    </LinearLayout>
