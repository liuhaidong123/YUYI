<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/drugbuy_window"
    android:layout_width="335dp"
    android:layout_height="wrap_content">

    <ImageView
        android:clickable="true"
        android:onClick="selectPayment"
        android:id="@+id/drug_window_fail_img_fail"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/paymentfailure"/>
    <TextView
        android:textSize="18sp"
        android:text="支付失败"
        android:id="@+id/drug_window_fail_textv_fail"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/drug_window_fail_img_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"/>

    <TextView
        android:text="继续支付"
        android:clickable="true"
        android:onClick="selectPayment"
        android:id="@+id/drug_window_fail_bottom_submit"
        android:gravity="center"
        android:background="@drawable/drugbuy_window_bottom"
        android:textSize="17sp"
        android:layout_below="@+id/drug_window_fail_textv_fail"
        android:textColor="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/drugbuy_window_fail_close"
        android:src="@mipmap/close_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>