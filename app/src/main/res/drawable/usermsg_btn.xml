<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape>
        <corners android:radius="4dp"></corners>
        <gradient android:endColor="#1ebeec"
            android:angle="270"
            android:startColor="#2feaeb">
        </gradient>
    </shape>
</item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4dp"></corners>
            <gradient android:endColor="#c81ebeec"
                android:angle="270"
                android:startColor="#c82feaeb">
            </gradient>
        </shape>
    </item>
</selector>